---
interface Props {
  header: string;
  content: string;
}

const { header, content } = Astro.props;
---

<li class="rounded-lg p-4 th-bg-accent w-80% sm:w-280px">
  <header class="text-lg th-text-color header-font">
    {header}
  </header>
  <p class="th-text-color mt-2 text-font">{content}</p>
</li>

<style>
  li {
    /* width: 280px; */
    height: 150px;
    border: 1px solid hsla(var(--text-color), 0.4);
  }
</style>
