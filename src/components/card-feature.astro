---
interface Props {
  header: string;
  content: string;
}

const { header, content } = Astro.props;
---

<li class="bg-gray-100 rounded-lg p-4">
  <header class="font-semibold text-lg text-gray-700">{header}</header>
  <p class="text-gray-500 mt-2">{content}</p>
</li>

<style>
  li {
    width: 280px;
    height: 150px;
  }
</style>
