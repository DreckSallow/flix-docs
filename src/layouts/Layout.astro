---
import GithubIcon from "../components/icons/github.astro";
import SunIcon from "../components/icons/sun.astro";
import Footer from "../components/footer.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen h-screen max-w-screen">
		<nav
			class="w-full flex flex-row justify-between px-4 text-lg z-99 bg-white"
		>
			<ul class="h-full flex flex-row items-center gap-4">
				<li class="uppercase">
					<a href="/">flix</a>
				</li>
				<li>
					<a href="/docs">docs</a>
				</li>
			</ul>
			<ul class="h-full flex flex-row items-center gap-6">
				<li>
					<a href="https://github.com/DreckSallow/flix" target="_blank">
						<GithubIcon className="fill-black h-7 w-7" />
					</a>
				</li>
				<li>
					<SunIcon className="fill-gray-800 h-7 w-7" />
				</li>
			</ul>
		</nav>
		<main class="h-screen min-h-screen">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	body > nav {
		height: 70px;
		position: fixed;
		border-bottom: 1px solid rgba(226, 223, 223, 0.783);
		top: 0;
	}
	body > nav li {
		cursor: pointer;
	}

	body > main {
		padding-top: 70px;
	}

	body > footer {
		background-color: #f9f9f9;
		border-top: 1px solid rgba(226, 223, 223, 0.783);
	}

	:root {
	}
	html {
		font-family: system-ui, sans-serif;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
